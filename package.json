{
  "name": "@ingeniova/devcontainer-features",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "clean": "rm -rf output",
    "clean:all": "pnpm clean && rm -rf node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm format:check && pnpm lint:shell",
    "lint:shell": "shellcheck src/**/*.sh test/**/*.sh",
    "prepare": "husky",
    "publish:all": "dotenv -- devcontainer features publish -n ingeniova/devcontainer-features src",
    "test": "devcontainer features test --skip-autogenerated",
    "up:latest": "pnpm up -iL"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "dotenv-cli": "11.0.0",
    "husky": "9.1.7",
    "prettier": "3.7.4",
    "prettier-plugin-sh": "0.18.0",
    "shellcheck": "4.1.0"
  }
}
