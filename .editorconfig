# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2

[*.{vue,js,ts,jsx,tsx}]
indent_size = 2

[{package.json,pnpm-lock.yaml}]
indent_size = 2
